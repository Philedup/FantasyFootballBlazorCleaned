@page "/Account/ForgotPassword"

@using System.ComponentModel.DataAnnotations
@using System.Text
@using System.Text.Encodings.Web
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.WebUtilities
@using FantasyFootballBlazor.Data

<PageTitle>Forgot Password</PageTitle>

<h3 class="fw-bold">Forgot Your Password?</h3>

<div class="card shadow-sm p-4">
    <p>
        If you need to reset your password, please email the administrator at:
    </p>

    <p class="fw-bold">
        📧 <a href="mailto:philedup@yahoo.com">philedup@yahoo.com</a>
    </p>

    <p>
        Be sure to include your username and registered email address in the email so we can verify your account.
    </p>

    <p class="text-muted mt-3">
        If you do not receive a response within 24 hours, please check your spam folder or try emailing again.
    </p>
</div>

<div class="mt-4">
    <a href="/Account/Login" class="btn btn-primary">Return to Login</a>
</div>